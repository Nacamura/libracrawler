<% comic = false
   nishitokyo = false
    @books.each do |book|
    	case Library.find(book.library_id).name
    	when "コミック"
    		comic = true
    	when "西東京市"
    		nishitokyo = true
    	end
    end
%>
[書名, 著者<%= ', 発売予定日' if comic %>]<BR>
<% @books.each do |book| %>
[<%= book.title %>, <%= book.author %><%= ', ' + book.release if comic %>]<BR>
<%= 'URL: ' + book.release if nishitokyo %><BR>
<% end %>
